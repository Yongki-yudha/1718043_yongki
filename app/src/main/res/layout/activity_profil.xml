<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="407dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/pink2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/abc_vector_test" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/yongki" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Yongki Yudha"
                android:textColor="@color/putih"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Indonesia"
                android:textAlignment="center"
                android:textColor="@color/putih"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="22dp"
            android:text="Liked"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"
            android:text="Following"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="22dp"
            android:text="Followers"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-130dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="45dp"
        android:text="87"
        android:textColor="@color/putih"
        android:textSize="25sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-75dp"
        android:text="232"
        android:textColor="@color/putih"
        android:textSize="25sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="-30dp"
        android:text="100"
        android:textColor="@color/putih"
        android:textSize="25sp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="About"
        android:layout_marginLeft="170dp"
        android:textColor="@color/putih"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Yongki adalah mahasiswa ITN Malang yang sekerang menempuh semester 5.Lahir dan bertempat tinggal di Malang. "
        android:textColor="@color/putih"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Jurusan yang diambil di ITN Malang adalah Informatika S1 "
        android:textColor="@color/putih"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Dalam semester 5 ini ada beberapa mata kuliah yang dia ambil salah satunya adalah Mobile programming yang membahas tentang android studio. "
        android:textColor="@color/putih"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

</LinearLayout>